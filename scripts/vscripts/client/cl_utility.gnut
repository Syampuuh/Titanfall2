entity function CreatePropDynamic( asset model, var origin = null, var angles = null )
{
	if( !origin )
		origin = Vector( 0, 0, 0 )
	if( !angles )
		angles = Vector( 0, 0, 0 )

	entity prop_dynamic = CreateClientSidePropDynamic( origin, angles, model )

	return prop_dynamic
}

